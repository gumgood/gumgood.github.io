---
layout: none
permalink: /search.json
---
[
  {% for post in site.posts %}
    {% capture categories %}{% for category in post.categories %}{% include utils/capitalize.html string=category %}{% unless forloop.last %} / {% endunless %}{% endfor %}{% endcapture %}
    {
      "title"      : "{{ post.title | escape }}",
      "categories" : "{{ categories }}",
      "tags"       : "{{ post.tags | join: ', ' }}",
      "url"        : "{{ site.baseurl }}{{ post.url }}",
      "date"       : "{{ post.date | date: "%b %e, %Y" }}",
      "content"    : {{ post.content | strip_html | strip_newlines | remove_chars | escape | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]